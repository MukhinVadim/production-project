{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@config/*": ["./config/*"], 
      "*": ["./src/*"]
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    }
  },
  "include": [
    "src/shared/lib/i18n/*",
    "./config/jest/jest-setup.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}